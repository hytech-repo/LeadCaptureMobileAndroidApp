<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color" />
            <corners android:radius="50dp" />
            <size android:height="20dp" android:width="50dp" />
            <padding android:bottom="2dp" android:left="1dp" android:right="0dp" android:top="2dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_switch_off" />
            <corners android:radius="50dp" />
            <size android:height="20dp" android:width="50dp" />
            <padding android:bottom="5dp" android:left="0dp" android:right="1dp" android:top="5dp"/>
        </shape>
    </item>
</selector>

