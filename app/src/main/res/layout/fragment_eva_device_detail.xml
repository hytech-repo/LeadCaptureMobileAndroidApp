<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/cvSaveBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_pro_bold"
                android:text="Enter Your Device Name"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <!-- First Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/sf_pro_regular"
                android:text="First Name"
                android:textColor="#000000"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_focusable_selector"
                android:enabled="false"
                android:fontFamily="@font/sf_pro_regular"
                android:hint="First Name"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:text="Gill Gonzalez"
                android:textSize="13dp" />

            <!-- Last Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/sf_pro_regular"
                android:text="Last Name"
                android:textColor="#000000"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_focusable_selector"
                android:enabled="false"
                android:fontFamily="@font/sf_pro_regular"
                android:hint="Last Name"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:text="Gill Gonzalez"
                android:textSize="13dp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/sf_pro_regular"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_focusable_selector"
                android:enabled="false"
                android:fontFamily="@font/sf_pro_regular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:text="Gill.zetsy@gmail.com"
                android:textSize="13dp" />

            <!-- Device Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/sf_pro_regular"
                android:text="Device Name"
                android:textColor="#000000"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/etDeviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_focusable_selector"
                android:fontFamily="@font/sf_pro_regular"
                android:hint="Device Name"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:text="Apple 16"
                android:textColor="@color/heading_text_color"
                android:textSize="13dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Save Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSaveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_rounded_corner_16"
        android:backgroundTint="@color/screen_bg_color"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="20dp">

            <TextView
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/slider_background"
                android:backgroundTint="@color/primary_color"
                android:gravity="center"
                android:padding="13dp"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
