<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:padding="24dp">

    <View
        android:id="@+id/vbg"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_round_filled"
        android:backgroundTint="@color/red_255"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_input_rounded"
        android:backgroundTint="@color/toast_error_bg"
        android:padding="4dp"
        android:src="@drawable/ic_signout_upward"
        app:layout_constraintBottom_toBottomOf="@id/vbg"
        app:layout_constraintEnd_toEndOf="@id/vbg"
        app:layout_constraintStart_toStartOf="@id/vbg"
        app:layout_constraintTop_toTopOf="@id/vbg" />

    <ImageView
        android:id="@+id/ivCross"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:tint="@color/heading_text_color"
        android:src="@drawable/ic_cross"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/sf_pro_bold"
        android:gravity="center"
        android:text="Are you sure you want to Sign out?"
        android:textColor="@color/heading_text_color"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ivIcon"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/ivIcon" />

    <TextView
        android:id="@+id/tvSubHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/sf_pro_regular"
        android:gravity="center"
        android:text="After signing out, this device will no longer be active. "
        android:textColor="@color/heading_text_color"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="@id/tvHeading"
        app:layout_constraintTop_toBottomOf="@id/tvHeading" />

    <TextView
        android:id="@+id/tvPrimaryBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_primary_stroke"
        android:backgroundTint="@color/primary_color"
        android:fontFamily="@font/sf_pro_regular"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubHeading" />

    <TextView
        android:id="@+id/tvSecondaryBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rounded_primary_stroke"
        android:fontFamily="@font/sf_pro_regular"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/eva_sign_out"
        android:textColor="@color/primary_color"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrimaryBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>