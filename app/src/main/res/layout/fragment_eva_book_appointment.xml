<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/screen_bg_color">

    <include
        android:id="@+id/incToolbar"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sf_pro_regular"
        android:text="Email"
        android:textColor="@color/subheading_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/incToolbar"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:fontFamily="@font/sf_pro_regular"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp"
        android:text="Gill.zetsy@gmail.com"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="@id/tvEmail"
        app:layout_constraintTop_toBottomOf="@id/tvEmail" />

    <TextView
        android:id="@+id/tvChooseMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sf_pro_regular"
        android:text="Choose Mode"
        android:textColor="@color/subheading_text_color"
        app:layout_constraintStart_toStartOf="@id/tvEmail"
        app:layout_constraintEnd_toEndOf="@id/tvEmail"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:textSize="13sp" />

    <RadioGroup
        android:id="@+id/rgMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/tvChooseMode"
        app:layout_constraintStart_toStartOf="@+id/tvChooseMode"
        app:layout_constraintTop_toBottomOf="@id/tvChooseMode">

        <RadioButton
            android:text="In person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_stroke_rounded"
            android:layout_weight="1"/>

        <RadioButton
            android:text="Virtual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_red_stroke_rounded"
            android:layout_weight="1"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/rgMode"
        app:layout_constraintStart_toStartOf="@+id/rgMode"
        app:layout_constraintTop_toBottomOf="@id/rgMode">

        <TextView
            android:id="@+id/SelectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/sf_pro_medium"
            android:text="Select Date"
            android:textColor="@color/heading_text_color"
            android:textSize="13sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/date_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            tools:listitem="@layout/item_date_tile"
            android:paddingEnd="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>