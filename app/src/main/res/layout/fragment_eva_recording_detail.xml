<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color">

    <include
        android:id="@+id/incToolbar"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvLeadRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/sf_pro_regular"
        android:text="Add to Lead Record"
        android:textColor="@color/subheading_text_color"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/incToolbar" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilLeadDropDown"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_input_rounded"
        app:boxBackgroundColor="@color/subheading_text_color"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/black"
        app:endIconDrawable="@drawable/ic_dropdown"
        app:endIconMode="dropdown_menu"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@id/tvLeadRecord"
        app:layout_constraintStart_toStartOf="@id/tvLeadRecord"
        app:layout_constraintTop_toBottomOf="@id/tvLeadRecord">

        <AutoCompleteTextView
            android:id="@+id/actvLeadDropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/sf_pro_regular"
            android:hint="Select Lead"
            android:inputType="none"
            android:textColor="@color/heading_text_color"
            android:textColorHint="@color/light_grey"
            android:textSize="13sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/sf_pro_regular"
        android:text="Audio"
        android:textColor="@color/subheading_text_color"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/tilLeadDropDown"
        app:layout_constraintStart_toStartOf="@+id/tilLeadDropDown"
        app:layout_constraintTop_toBottomOf="@+id/tilLeadDropDown" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llcRecording"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_input_rounded"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tvAudio"
        app:layout_constraintStart_toStartOf="@+id/tvAudio"
        app:layout_constraintTop_toBottomOf="@+id/tvAudio">

        <com.eva.lead.capture.ui.view.WaveformView
            android:id="@+id/waveRecording"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivPlayPause"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_checkbox_selector"
            android:backgroundTint="@color/primary_color"
            android:padding="7dp"
            android:src="@drawable/ic_play" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tvAudioTranscript"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sf_pro_regular"
        android:text="Audio Transcript"
        android:textColor="@color/subheading_text_color"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/llcRecording"
        app:layout_constraintStart_toStartOf="@+id/llcRecording"
        app:layout_constraintTop_toBottomOf="@+id/llcRecording" />

