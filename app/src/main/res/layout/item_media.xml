<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clSelectedImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:layout_marginStart="14dp">

    <ImageView
        android:id="@+id/ivEventLogo"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_input_rounded"
        android:src="@drawable/ic_logo_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCross"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:src="@drawable/ic_cancel_circle"
        app:layout_constraintEnd_toEndOf="@id/ivEventLogo"
        app:layout_constraintTop_toTopOf="@id/ivEventLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>
